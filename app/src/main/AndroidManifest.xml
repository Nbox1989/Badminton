<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".basic.AppApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Badminton"
        tools:targetApi="31">
        <activity
            android:name="com.aihuishou.badminton.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Badminton"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aihuishou.badminton.player.edit.PlayerListActivity"
            android:theme="@style/Theme.Badminton"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.aihuishou.badminton.player.pick.PlayerPickActivity"
            android:theme="@style/Theme.Badminton"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>